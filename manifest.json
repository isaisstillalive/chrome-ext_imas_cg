{
  "manifest_version": 2,
  "name": "ExtImasCG",
  "version": "0.0.1",

  "description": "シンデレラガールズを使いやすくする",

  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.mbga.jp/12008305/?guid=ON&url=*"],
      "include_globs": ["*http%3A%2F%2F125.6.169.35%2Fidolmaster%2Fdeck%2Fdeck_edit_top%3F*"],
      "js": ["jquery-2.1.3.min.js","deck_edit_top.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "clipboardWrite",
    "https://raw.githubusercontent.com/isaisstillalive/imas_cg_hash/*"
  ]
}
